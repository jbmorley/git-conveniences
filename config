[alias]

git-tools-install-directory = !dirname `git config --list --show-origin | grep alias.git-tools-install-directory | cut -f1 | cut -d":" -f2`

br = branch
ci = commit
co = checkout
del = !"`git git-tools-install-directory`/scripts/del.sh"
dt = difftool
list-alias = config --get-regexp ^alias
pf = push --force-with-lease
s = status
sha = rev-parse HEAD
sl = log --oneline --decorate -20
sla = log --oneline --decorate --graph --all -20
st = status
up = !git fetch origin -p && git rebase origin/main --autostash

gt-update = !"`git git-tools-install-directory`/scripts/gt-update.sh"
gt-install = !"`git git-tools-install-directory`/scripts/gt-install.sh"
