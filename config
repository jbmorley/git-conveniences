[alias]

git-tools-install-directory = !dirname `git config --list --show-origin | grep alias.git-tools-install-directory | cut -f1 | cut -d":" -f2`

br = branch
ci = commit
co = checkout
dt = difftool
list-alias = config --get-regexp ^alias
s = status
sha = rev-parse HEAD
st = status
up = !git fetch origin -p && git rebase origin/main --autostash

hello = !"`git git-tools-install-directory`/scripts/hello.sh"

update-git-tools = !"`git git-tools-install-directory`/scripts/update-git-tools.sh"
